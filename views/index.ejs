<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NotePad</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input
            class="bg-zinc-700 block w-full rounded-md outline-none px-5 py-3"
            name="title"
            type="text"
            placeholder="Title of the task"
          />
          <textarea
            class="bg-zinc-700 block w-full rounded-md outline-none px-5 py-3 mt-2 resize-none"
            name="details"
            placeholder="Describe your task..."
          ></textarea>
          <input
            class="mt-2 bg-blue-500 rounded-md p-2"
            type="submit"
            value="Create Task"
          />
        </form>
      </div>

      <div class="tasks p-10 flex flex-wrap gap-3">
        <% if(files.length>0){%> <% files.forEach((val) => { %>
        <div class="task w-72 px-3 py-4 rounded-md bg-zinc-700">
          <h1 class="text-white text-3xl tracking-tighter">
            <% val=val.split('.') %> <% val=val[0] %> <%= val %>
          </h1>
          <div class="flex justify-between mt-3 ">
            <a class="text-blue-500 inline-block" href="/file/<%= val %>">see more...</a>
            <a class="text-red-600 inline-block" href="/edit/<%=val %>">edit name</a>
          </div>
        </div>
        <% }) %> <% }else{ %>
        <h1 class="text-zinc-600">No task yet!!</h1>
        <% } %>
      </div>
    </div>
  </body>
</html>
